/*-----------------------------------------------
  (1) Prisma Client Generator - This tells Prisma to generate a JS/TS client   so we can talk to the database using code.
-----------------------------------------------*/
generator client {
  provider = "prisma-client-js"
}



/*-----------------------------------------------
  (2) Database Connection (Datasource) - Defines which database to use and how to connect.Currently using SQLite (a local file-based DB).
-----------------------------------------------*/
datasource db {
  provider = "sqlite"             // Database type (could also be "postgresql", "mysql", etc.)
  url      = "file:./dev.db"      // Location of the SQLite database file
}



/*----------------------------------------------- 
  (3) Model: Service - Defines a table named "Service" in the database. Each field below becomes a column in that table.
-----------------------------------------------*/
model Service {
  id        Int      @id @default(autoincrement())  // Primary key, auto-incremented (1,2,3,â€¦)
  title     String                                   // Service title
  slug      String   @unique                         // Unique identifier (e.g., 'web-design')
  content   String                                   // Description/content of the service
  createdAt DateTime @default(now())                 // Automatically stores current date/time
  updatedAt DateTime @updatedAt                      // Auto-updates on record modification
}



/*-----------------------------------------------
  (4) Model: Page - Defines another table named "Page" for storing content blocks or CMS-style sections.
-----------------------------------------------*/
model Page {
  id        Int      @id @default(autoincrement())  // Primary key
  key       String   @unique                        // Unique key (e.g., 'home.hero', 'about.mission')
  content   String                                 // Page content or section text
  createdAt DateTime @default(now())               // Created date/time
  updatedAt DateTime @updatedAt                    // Updated automatically when changed
}
