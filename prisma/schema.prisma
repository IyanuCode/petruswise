// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ------------------- MODELS -------------------

model Admin {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  role        Role      @default(EDITOR)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model PageContent {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
// ------------------- contactPage model -------------------
model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
}

model ContactPage {
  id                  Int           @id @default(autoincrement())
  slug                String        @unique
  heroTitle           String
  heroParagraph       String
  heroImage           String
  prevCloudinaryImgId String?  ///delete the old image when updating    
  talkTitle           String
  talkDescription     String
  address             String
  phone               String
  email               String
  keyContacts         ContactInfo[]
  testimonials        Testimonial[]
  partners            Partner[]
  updatedAt           DateTime      @updatedAt
}


model ContactInfo {
  id                     Int         @id @default(autoincrement())
  name                   String
  imageUrl               String  
  prevCloudinaryImgId    String?    
  role                   String
  contactInfo            String
  contactPage            ContactPage? @relation(fields: [contactPageId], references: [id])
  contactPageId          Int?
}

model Testimonial {
  id            Int         @id @default(autoincrement())
  name          String
  quote         String
  role          String
  contactPage   ContactPage? @relation(fields: [contactPageId], references: [id])
  contactPageId Int?
}

model Partner {
  id                    Int         @id @default(autoincrement())
  name                  String
  logoUrl               String
  prevCloudinaryImgId   String?  ///delete the old image when updating    

  contactPage           ContactPage? @relation(fields: [contactPageId], references: [id])
  contactPageId         Int?
}
//--------------contactPage Ends----------------------------------------------------------



// ------------------- About page model -------------------
model AboutPage {
  id              Int      @id @default(autoincrement())
  slug            String   @unique
  heroTitle       String
  heroParagraph   String
  heroImage       String
  ourStoryIntro   String
  ourStoryCont    String
  ourStoryEnding  String
  mission         String
  vision          String
  updatedAt       DateTime @updatedAt

  staff           Staff[]  // One-to-many relation to Staff
}

// ------------------- Staff model -------------------
model Staff {
  id          Int        @id @default(autoincrement())
  name        String
  role        String
  experience  String
  tooltip     String?
  bio         String?
  image       String?
  overlayText String?
  aboutPageId Int?       // foreign key to AboutPage

  aboutPage   AboutPage? @relation(fields: [aboutPageId], references: [id])
  createdAt   DateTime   @default(now())
}

enum Role {
  SUPERADMIN
  ADMIN
  EDITOR
}
